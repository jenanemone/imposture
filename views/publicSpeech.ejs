<%- include('partials/recordHeader') -%>

  <main class="pt-5"> 
    <h1 class="mx-auto text-2xl text-center">Record Your Voice</h1>
    <div class="container flex justify-center mt-16">
      

      <push-to-talk-button appid="39285e2b-b8dc-4de7-b989-81e5dff11685"  customcssurl="/css/style.css" id="pttButton" class="my-4">
      </push-to-talk-button>
      
      <transcript-drawer hint='["Try: Hello", "Try: Hi there"]'>
      </transcript-drawer>

      <big-transcript
      placement="top"
      formattext="false" >
      </big-transcript>
      
      <intro-popup>
        <span slot="priming-body">
          Click to record your voice. Click to stop!
        </span>
      </intro-popup>
      
    </div>
    <section class="transcripts" id="transcripts">
      <h2 id="output" class="text-center"></h2>
      <ul id="recording-transcripts">

      </ul>
    </section>
    <script src="/js/speechly.js"></script>
  </main>